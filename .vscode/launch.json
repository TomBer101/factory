{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Nodemon",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}\\index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
